{
    "manifest_version": 2,
    "name": "quickmark",
    "description": "Typeahead enabled fast bookmarking",
    "version": "1.0.0",
    "browser_action": {
        "default_title": "quickmark",
        "default_icon": "resources/images/quickmark.png",
        "default_popup": "popup.html"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Ctrl+Shift+B",
                "mac": "Command+Shift+B",
                "linux": "Ctrl+Shift+B"
            }      
        }
    },
    "web_accessible_resources": [
        "resources/images/quickmark.png"
        ],
    "permissions": [
        "http://*/*",
        "https://*/*",
        "bookmarks",
        "tabs"
    ]
}